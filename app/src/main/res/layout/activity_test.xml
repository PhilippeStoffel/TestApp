<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.philippe.testapp.TestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_test_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="test"/>
        <ImageView
            android:id="@+id/activity_test_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/activity_test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/activity_test_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">
        <Button
            android:id="@+id/activity_test_button_showactionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showActionBar"/>
        <Button
            android:id="@+id/activity_test_button_setimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setImageView"/>

        <Button
            android:id="@+id/activity_test_button_loadimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loadImageView"/>

        <Button
            android:id="@+id/activity_test_button_settextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setTextView"/>
        <Button
            android:id="@+id/activity_test_button_setonclicklistener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setOnClickListener"/>
        <Button
            android:id="@+id/activity_test_button_setvisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setVisibility"/>

    </GridLayout>
</LinearLayout>
